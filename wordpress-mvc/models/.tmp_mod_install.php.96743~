<?php
 class Mod_install extends Model{
    function __construct(){
    	parent::__construct();
    }
    function modActivate(){
		$sql="
		    CREATE TABLE `{$this->prefix}cm_categorias` (
		    `cm_cat_id` INT( 11 ) NOT NULL AUTO_INCREMENT PRIMARY KEY ,
		    `cm_cat_nombre` VARCHAR( 30 ) NOT NULL
		    ) ENGINE = MYISAM ;
		";
		parent::query($sql);
    }
    function modDeactivate(){
		$sql="DROP TABLE `{$this->prefix}cm_categorias`;";
		parent::query($sql);
    }
 }
?>